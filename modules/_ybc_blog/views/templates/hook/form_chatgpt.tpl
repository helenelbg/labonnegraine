    <div class="form-wrapper">
        <ul id="chatgpt-history-list">
            {if $chatgpt_messages}
                {foreach from = $chatgpt_messages item='message'}
                    {$message.content nofilter}
                {/foreach}
            {/if}
        </ul>
    </div>
    <div class="chatgpt-box-send">
        <textarea name="message-chatppt" placeholder="{l s='Send a message... ' mod='ybc_blog'}"></textarea>
        <input type="hidden" name="input_content_name" value="title">
        {foreach from =$languages item='language'}
            <div class="box-gpt-templates">
                {if count($languages) >1}
                <div class="translatable-field lang-{$language.id_lang|intval}" {if $language.id_lang != $defaultFormLanguage}style="display:none"{/if}>
                    {/if}
                    {if $gpt_templates[$language.id_lang]}
                        <ul class="gpt-list-templates">
                            {foreach from=$gpt_templates[$language.id_lang] item='template'}
                                {if $template.label && $template.content}
                                    <li class="gpt-item-template" data-content="{$template.content|escape:'html':'UTF-8'}">{$template.label|escape:'html':'UTF-8'}</li>
                                {/if}
                            {/foreach}
                        </ul>
                    {/if}
                    {if count($languages) >1}
                </div>
                {/if}
            </div>
        {/foreach}
    </div>
    <div class="panel-footer">
        <button type="button" value="1" class="btn btn-default pull-right btn-send-gpt">
            {l s='Send' mod='ybc_blog'}
        </button>
    </div>
